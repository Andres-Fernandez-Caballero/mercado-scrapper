{
  "name": "mercadolibre-car-scraper",
  "version": "1.1.1",
  "description": "TypeScript-based web scraper for MercadoLibre car listings with foreign currency prices",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --target=es2020",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "scraper",
    "mercadolibre",
    "puppeteer",
    "cars",
    "typescript"
  ],
  "author": "Andres Fernandez",
  "license": "MIT",
  "dependencies": {
    "@sparticuz/chromium": "^119.0.0",
    "puppeteer-core": "^21.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/puppeteer": "^7.0.0",
    "@types/puppeteer-core": "^7.0.4",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "puppeteer": "^21.5.0"
  }
}
